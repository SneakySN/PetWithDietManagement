<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF"/> <!-- 배경색 설정 -->
    <corners android:radius="8dp"/> <!-- 모서리 둥글게 설정 -->
    <stroke
        android:width="1dp"
        android:color="#FFA726"/> <!-- 테두리 색상 및 두께 설정 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- 패딩 설정 -->
    <size
        android:width="280dp"
        android:height="50dp"/> <!-- 크기 설정 -->
</shape>
