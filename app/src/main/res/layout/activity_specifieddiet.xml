<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 메뉴 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#F5D6A2"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="68dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:contentDescription="메뉴"
            android:scaleType="fitCenter"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 검색 버튼 -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="83dp"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:contentDescription="검색 버튼"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_recommended"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:
            android:background="@android:color/transparent"
            android:text="추천"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/button_korean"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_korean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="한식"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/button_western"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/button_recommended"
            app:layout_constraintTop_toBottomOf="@id/menuButton" />

        <!-- 양식 버튼 -->
        <Button
            android:id="@+id/button_western"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="양식"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/button_japanese"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/button_korean"
            app:layout_constraintTop_toBottomOf="@id/menuButton" />

        <!-- 일식 버튼 -->
        <Button
            android:id="@+id/button_japanese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="일식"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/button_western"
            app:layout_constraintTop_toBottomOf="@id/menuButton" />

        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="145dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_2"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="144dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_3"
            android:layout_width="97dp"
            android:layout_height="27dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="144dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 네비게이션 바 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="481dp"
        android:background="#F5D6A2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="TestMenu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="262dp"
            android:layout_height="44dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="149dp"
            android:padding="10dp"
            android:text="TestDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="262dp"
            android:src="@drawable/camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 각 버튼은 추가로 정의 필요 -->
        <!-- 예: 홈, 즐겨찾기, 설정, 로그아웃 -->
        <!-- 바텀 네비게이션 바 -->
        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#FFA726"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <!-- 홈 아이콘 -->
            <ImageButton
                android:id="@+id/ic_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:contentDescription="home_button_description"
                android:scaleType="fitCenter"
                android:src="@drawable/home_button_selector" />

            <!-- 음식 아이콘 -->
            <ImageButton
                android:id="@+id/ic_diet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:contentDescription="diet_button_description"
                android:scaleType="fitCenter"
                android:src="@drawable/diet_button_selector" />

            <!-- 캘린더 아이콘 -->
            <ImageButton
                android:id="@+id/ic_calendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:contentDescription="calendar_button_description"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar_button_selector" />

            <!-- 펫 아이콘 -->
            <ImageButton
                android:id="@+id/ic_petMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:contentDescription="pet_button_description"
                android:scaleType="fitCenter"
                android:src="@drawable/pet_button_selector" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="299dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="181dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FADAAA"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
