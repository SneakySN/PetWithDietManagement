<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D6A2"
    android:padding="8dp">

    <!-- 바텀 네비게이션 바를 제외한 부분을 나타내는 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="568dp" >

        <!-- 배경 -->
        <ImageView
            android:id="@+id/background"
            android:layout_width="401dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background" />

        <!-- 배경과 바닥의 비율을 나누기 위한 가이드라인 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66" />

        <!-- 바닥 -->
        <ImageView
            android:id="@+id/floor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/floor" />

        <!-- 카펫 -->
        <ImageView
            android:id="@+id/carpet"
            android:layout_width="306dp"
            android:layout_height="239dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/floor"
            app:layout_constraintEnd_toEndOf="@+id/floor"
            app:layout_constraintStart_toStartOf="@+id/floor"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/carpet" />

        <!-- 말풍선 -->
        <ImageView
            android:id="@+id/speechBubble"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="143dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="107dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/speech_buble" />

        <!-- 말풍선 텍스트 -->
        <TextView
            android:id="@+id/speechBubbleText"
            android:layout_width="101dp"
            android:layout_height="68dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="75dp"
            android:gravity="center"
            android:text="와줘서 고마워!"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/speechBubble"
            app:layout_constraintEnd_toEndOf="@+id/speechBubble"
            app:layout_constraintStart_toStartOf="@+id/speechBubble"
            app:layout_constraintTop_toTopOf="@+id/speechBubble" />

        <!-- 캐릭터 이미지 -->
        <ImageView
            android:id="@+id/character_image"
            android:layout_width="290dp"
            android:layout_height="261dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="283dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="61dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/floor"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/pet_image" />

        <!-- "사진 모드" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="318dp"
            android:layout_marginBottom="280dp"
            android:text="사진 모드"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/camera" />

        <!-- 카메라 이미지 -->
        <ImageView
            android:id="@+id/camera"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/camera" />

        <!-- 현재 보유 돈 표시 -->
        <TextView
            android:id="@+id/currentMoney"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="169dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="319dp"
            android:background="@drawable/rounded_corners"
            android:gravity="end"
            android:text="2,000    "
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background" />

        <!-- 코인 이미지 -->
        <ImageView
            android:id="@+id/coin"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="167dp"
            android:layout_marginBottom="310dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/currentMoney"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/coin" />

        <!-- "상점" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="354dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="21dp"
            android:text="상점"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mission"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/shop" />

        <!-- 상점 이미지 -->
        <ImageView
            android:id="@+id/shop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="331dp"
            android:layout_marginTop="106dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/mission"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/shop" />

        <!-- "미션" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="354dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="12dp"
            android:text="미션"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/decorating"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/mission" />

        <!-- 미션 이미지 -->
        <ImageView
            android:id="@+id/mission"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="336dp"
            android:layout_marginTop="198dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/decorating"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/mission" />

        <!-- "꾸미기" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="25dp"
            android:text="꾸미기"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/decorating" />

        <!-- 꾸미기 이미지 -->
        <ImageView
            android:id="@+id/decorating"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="338dp"
            android:layout_marginTop="281dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/decorating" />

        <!-- "게임하기" 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="346dp"
            android:layout_marginBottom="22dp"
            android:text="게임하기"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/game" />

        <!-- 게임 이미지 -->
        <ImageView
            android:id="@+id/game"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="281dp"
            android:layout_marginEnd="340dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/game" />

        <!-- 칭호와 이름 텍스트-->
        <TextView
            android:id="@+id/petTitleAndName"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginStart="107dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/half_top_rounded_corners"
            android:gravity="center"
            android:text="건강하게 자라는    용용이"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/floor"
            app:layout_constraintEnd_toEndOf="@+id/floor"
            app:layout_constraintStart_toStartOf="@+id/floor"
            app:layout_constraintTop_toTopOf="@+id/floor" />

        <!-- 추억 텍스트-->
        <TextView
        android:id="@+id/petMemory"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/left_bottom_rounded_corners"
        android:gravity="center"
        android:text="추억"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/floor"
        app:layout_constraintEnd_toStartOf="@+id/petStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/petTitleAndName"
        app:layout_constraintVertical_bias="0.0" />

        <!-- 상태 텍스트-->
        <TextView
            android:id="@+id/petStatus"
            android:layout_width="89dp"
            android:layout_height="45dp"
            android:layout_marginStart="197dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/right_bottom_rounded_corners"
            android:gravity="center"
            android:text="상태"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/floor"
            app:layout_constraintEnd_toEndOf="@+id/floor"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/floor"
            app:layout_constraintTop_toBottomOf="@+id/petTitleAndName"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 바텀 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#FFA726"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center">

        <!-- 홈 아이콘 -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <!-- 음식 아이콘 -->
        <ImageView
            android:id="@+id/food_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/diet" />

        <!-- 캘린더 아이콘 -->
        <ImageView
            android:id="@+id/calendar_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/calendar" />

        <!-- 펫 아이콘 -->
        <ImageView
            android:id="@+id/pet_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pet" />
    </LinearLayout>

</RelativeLayout>